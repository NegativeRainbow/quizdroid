<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topic_overview_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.washington.danishb.quizdroid.TopicOverviewFragment">


    <TextView
        android:text="Topic Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topic_description_view"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:text="Begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic_description_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/begin_quiz_button"
        android:textStyle="normal|bold"
        android:textSize="24sp" />
</RelativeLayout>
